---
import '../styles/global.css';
import Header from '../components/Header';
import { getMenuItems } from '../lib/graphql';
import { processMenuItems } from '../utils/urlMapper';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'eComm360 - Soluciones de Comercio Electrónico', image } = Astro.props;

// Obtener items del menú desde WordPress
let menuItems = [];
try {
  const menuData = await getMenuItems();
  if (menuData?.menus?.edges?.[0]?.node?.menuItems?.edges) {
    const rawMenuItems = menuData.menus.edges[0].node.menuItems.edges.map(({ node }) => node);
    // Procesar URLs para convertirlas a rutas locales
    menuItems = processMenuItems(rawMenuItems);
  }
} catch (error) {
  console.error('Error loading menu:', error);
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1B5585" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={image} />}
    
    <title>{title} | eComm360</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preconnect a Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;600;700;800&family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="antialiased">
    <Header client:load menuItems={menuItems} />
    
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-4 md:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
          <!-- Brand -->
          <div>
            <div class="flex items-center space-x-2 mb-4">
              <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-400 to-cyan-400 flex items-center justify-center">
                <span class="text-gray-900 font-bold text-lg">e</span>
              </div>
              <span class="font-bold text-lg">eComm360</span>
            </div>
            <p class="text-gray-400 text-sm">Soluciones integrales de comercio electrónico para tu negocio.</p>
          </div>

          <!-- Links -->
          <div>
            <h4 class="font-semibold mb-4">Producto</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="/servicios" class="hover:text-white transition-colors">Servicios</a></li>
              <li><a href="/soluciones" class="hover:text-white transition-colors">Soluciones</a></li>
              <li><a href="/plataformas-ecommerce" class="hover:text-white transition-colors">Plataformas</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Empresa</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="/empresa-ecommerce" class="hover:text-white transition-colors">Sobre nosotros</a></li>
              <li><a href="/blog" class="hover:text-white transition-colors">Blog</a></li>
              <li><a href="/contacto" class="hover:text-white transition-colors">Contacto</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Legal</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="/politica-de-privacidad" class="hover:text-white transition-colors">Privacidad</a></li>
              <li><a href="/aviso-legal" class="hover:text-white transition-colors">Aviso Legal</a></li>
              <li><a href="/politica-de-cookies" class="hover:text-white transition-colors">Cookies</a></li>
            </ul>
          </div>
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-800 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-400">
            <p>&copy; 2026 eComm360. Todos los derechos reservados.</p>
            <div class="flex space-x-6 mt-4 md:mt-0">
              <a href="https://twitter.com/ecomm360" target="_blank" rel="noopener" class="hover:text-white transition-colors">Twitter</a>
              <a href="https://linkedin.com/company/ecomm360" target="_blank" rel="noopener" class="hover:text-white transition-colors">LinkedIn</a>
              <a href="https://github.com/ecomm360" target="_blank" rel="noopener" class="hover:text-white transition-colors">GitHub</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
