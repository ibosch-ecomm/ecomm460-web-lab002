---
import '../styles/global.css';
import Header from '../components/Header';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'eComm360 - Soluciones de Comercio Electrónico', image } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1B5585" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={image} />}
    
    <title>{title} | eComm360</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preconnect a Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="antialiased">
    <Header client:load />
    
    <main class="tech-bg min-h-screen">
      <div class="max-w-4xl mx-auto px-4 md:px-8 py-20 md:py-32">
        <article class="prose prose-lg max-w-none">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">{title}</h1>
          
          <div class="prose-content">
            <slot />
          </div>
        </article>
      </div>
    </main>

    <footer class="bg-gray-900 text-white py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-4 md:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
          <!-- Brand -->
          <div>
            <div class="flex items-center space-x-2 mb-4">
              <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-400 to-cyan-400 flex items-center justify-center">
                <span class="text-gray-900 font-bold text-lg">e</span>
              </div>
              <span class="font-bold text-lg">eComm360</span>
            </div>
            <p class="text-gray-400 text-sm">Soluciones integrales de comercio electrónico para tu negocio.</p>
          </div>

          <!-- Links -->
          <div>
            <h4 class="font-semibold mb-4">Producto</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="#" class="hover:text-white transition-colors">Características</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Precios</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Seguridad</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Empresa</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="#" class="hover:text-white transition-colors">Sobre nosotros</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Blog</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Contacto</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Legal</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="#" class="hover:text-white transition-colors">Privacidad</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Términos</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Cookies</a></li>
            </ul>
          </div>
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-800 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-400">
            <p>&copy; 2026 eComm360. Todos los derechos reservados.</p>
            <div class="flex space-x-6 mt-4 md:mt-0">
              <a href="#" class="hover:text-white transition-colors">Twitter</a>
              <a href="#" class="hover:text-white transition-colors">LinkedIn</a>
              <a href="#" class="hover:text-white transition-colors">GitHub</a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <style>
      body {
        font-family: 'Inter', sans-serif;
      }

      :global(.prose-content p) {
        @apply reading-guide;
      }

      :global(.prose-content h2) {
        @apply text-3xl font-bold text-gray-900 mt-12 mb-6;
      }

      :global(.prose-content h3) {
        @apply text-2xl font-bold text-gray-900 mt-8 mb-4;
      }

      :global(.prose-content a) {
        @apply text-blue-600 hover:text-blue-700 transition-colors;
      }

      :global(.prose-content ul) {
        @apply list-disc list-inside space-y-2 text-gray-700;
      }

      :global(.prose-content ol) {
        @apply list-decimal list-inside space-y-2 text-gray-700;
      }

      :global(.prose-content blockquote) {
        @apply border-l-4 border-blue-600 pl-4 py-2 italic text-gray-600;
      }

      :global(.prose-content code) {
        @apply bg-gray-100 rounded px-2 py-1 text-sm font-mono text-gray-800;
      }

      :global(.prose-content pre) {
        @apply bg-gray-900 rounded-lg p-4 overflow-x-auto;
      }

      :global(.prose-content pre code) {
        @apply text-gray-100 bg-transparent;
      }
    </style>
  </body>
</html>
